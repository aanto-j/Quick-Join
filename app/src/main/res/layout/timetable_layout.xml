<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:background="@drawable/ttbg">

        <TextView
            android:id="@+id/sub_code"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25dp"
            android:layout_margin="10dp"
            tools:text="MA8151" />

        <TextView
            android:id="@+id/disp_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            tools:text="2017 - CSE - 2" />

        <TextView
            android:id="@+id/sub_name"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/sub_code"
            android:textSize="20dp"
            tools:text="Engineering Mathematics" />

        <TextView
            android:id="@+id/facname"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/sub_name"
            android:textSize="20dp"
            tools:text="G.Thavaselvan" />

        <TextView
            android:id="@+id/sub_time"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/facname"
            tools:text="9:00-9:45"
            android:layout_margin="10dp"/>

        <Button
            android:id="@+id/m_link"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/disp_info"
            android:layout_alignBaseline="@id/sub_time"
            android:layout_alignParentEnd="true"
            android:layout_margin="10dp"
            android:backgroundTint="@color/white"
            android:text="join"
            android:textColor="@color/teal_700" />

    </RelativeLayout>

</RelativeLayout>