<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20dp"
        android:layout_margin="20dp"
        tools:text="Department" />
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <Button
            android:id="@+id/add_sub"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_margin="20dp"
            style="?attr/materialButtonOutlinedStyle"
            android:text="Add Subject" />

        <Button
            android:id="@+id/view_sub"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:layout_below="@id/add_sub"
            android:layout_centerHorizontal="true"
            style="?attr/materialButtonOutlinedStyle"
            android:text="View Subject" />
        <Button
            android:id="@+id/add_time"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Add Time Table"
            android:layout_below="@id/view_sub"
            android:layout_centerHorizontal="true"
            style="?attr/materialButtonOutlinedStyle"
            />
        <Button
            android:id="@+id/view_time"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="View Time Table"
            android:layout_below="@id/add_time"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/quick_join"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Quick Join"
            android:layout_below="@id/view_time"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_centerHorizontal="true"/>
        <Button
            android:id="@+id/add_admin"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:text="Add Admin"
            android:layout_below="@id/quick_join"
            style="?attr/materialButtonOutlinedStyle"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</RelativeLayout>